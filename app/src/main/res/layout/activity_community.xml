<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:title="마이페이지SSS"
        android:titleTextColor="#000000" />

    <!-- 툴바 아래 간격 추가 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- 마이페이지 내용 표시 영역 -->
    <TextView
        android:id="@+id/communityInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="마이페이지에 게시된 내용이 없습니다."
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#808080"
        android:padding="16dp" />

    <!-- 하단 메뉴 추가 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:weightSum="4">

        <!-- 메인페이지 버튼 -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/home_2"/>

        <!-- 회원정보 버튼 -->
        <Button
            android:id="@+id/memberButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회원정보"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/user_2"/>

        <!-- 공지사항 버튼 -->
        <Button
            android:id="@+id/noticeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/info_2"/>

        <!-- 챗봇 버튼 -->
        <Button
            android:id="@+id/chatbotButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="챗봇"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/chatbot_5"/>
    </LinearLayout>

</LinearLayout>
