<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="top"
    android:background="@color/white">

    <!-- 예약 관련 레이아웃 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="b 기관"
        android:background="#D3D3D3"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/reservationDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="예약희망 일자"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/reservationCalendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/returnDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="반납희망 일자"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/returnCalendarIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- 1번 휠체어 체크박스 추가 -->
        <CheckBox
            android:id="@+id/wheelchairCheckBox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1번 휠체어"
            android:gravity="center"
            android:background="#D3D3D3"
            android:layout_marginRight="8dp"
            android:padding="16dp" />

        <!-- 2번 휠체어 체크박스 추가 -->
        <CheckBox
            android:id="@+id/wheelchairCheckBox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2번 휠체어"
            android:gravity="center"
            android:background="#D3D3D3"
            android:layout_marginLeft="8dp"
            android:padding="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/reserveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약하기"
        android:background="#D3D3D3"
        android:layout_marginTop="16dp" />



</LinearLayout>
